<UserControl x:Class="DianaLab.GUI.Views.ExtractView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DianaLab.GUI.Views"
             xmlns:controls="clr-namespace:DianaLab.GUI.Controls"
             xmlns:converters="clr-namespace:DianaLab.GUI.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <GroupBox Header="Asset Bundle" Grid.Row="0" Margin="5">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <controls:LabeledControl Label="Bundles location:" LabelWidth="130" Grid.Row="0">
                        <controls:LabeledControl.InputContent>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Margin="0,0,5,0" Text="{Binding BundlesLocation}"/>
                                    <Button Grid.Column="1" Width="33" Content="..." />
                                </Grid>
                                <TextBlock Grid.Row="1" Text="Invalid folder path" Foreground="Red" FontSize="10" Visibility="{Binding BundlesLocationInvalid, Converter={StaticResource booleanToVisibilityConverter}}"/>
                            </Grid>
                        </controls:LabeledControl.InputContent>
                    </controls:LabeledControl>
                    
                    <controls:LabeledControl Label="Output location:" LabelWidth="130" Grid.Row="1">
                        <controls:LabeledControl.InputContent>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Margin="0,0,5,0" Text="{Binding OutputLocation}"/>
                                    <Button Grid.Column="1" Width="33" Content="..." />
                                </Grid>
                                <TextBlock Grid.Row="1" Text="Invalid folder path" Foreground="Red" FontSize="10" Visibility="{Binding OutputLocationInvalid, Converter={StaticResource booleanToVisibilityConverter}}"/>
                            </Grid>
                        </controls:LabeledControl.InputContent>
                    </controls:LabeledControl>
                    
                    <CheckBox Grid.Row="2" Content="Copy to temp folder" IsChecked="{Binding CopyToTempFolder}" Margin="5,5,0,0"/>

                    <controls:LabeledControl Label="Temp location:" LabelWidth="130" Grid.Row="3" Visibility="{Binding CopyToTempFolder, Converter={StaticResource booleanToVisibilityConverter}}">
                        <controls:LabeledControl.InputContent>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Margin="0,0,5,0" Text="{Binding TempLocation}"/>
                                    <Button Grid.Column="1" Width="33" Content="..." />
                                </Grid>
                                <TextBlock Grid.Row="1" Text="Invalid folder path" Foreground="Red" FontSize="10" Visibility="{Binding TempLocationInvalid, Converter={StaticResource booleanToVisibilityConverter}}"/>
                            </Grid>
                        </controls:LabeledControl.InputContent>
                    </controls:LabeledControl>
                    
                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,5,0,0">
                        <controls:LabeledControl Label="Start Date:" LabelWidth="130">
                            <controls:LabeledControl.InputContent>
                                <DatePicker Width="120" SelectedDate="{Binding StartDate, Mode=TwoWay}"/>
                            </controls:LabeledControl.InputContent>
                        </controls:LabeledControl>
                        <controls:LabeledControl Label="End Date:" LabelWidth="130" Margin="10,0,0,0">
                            <controls:LabeledControl.InputContent>
                                <StackPanel>
                                    <DatePicker Grid.Row="0" Width="120" SelectedDate="{Binding EndDate, 
                                    Mode=TwoWay}" HorizontalAlignment="Left"/>
                                    <TextBlock Grid.Row="1" Text="End date cannot be earlier than start date" Foreground="Red" 
                                               FontSize="10" Visibility="{Binding EndDateInvalid, Converter={StaticResource 
                                    booleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </controls:LabeledControl.InputContent>
                        </controls:LabeledControl>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <GroupBox Header="Asset Studio Config" Grid.Row="1" Margin="5">
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <controls:LabeledControl Label="CLI location:" LabelWidth="100" Grid.Row="0">
                        <controls:LabeledControl.InputContent>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Margin="0,0,5,0" Text="{Binding CliLocation}"/>
                                    <Button Grid.Column="1" Width="33" Content="..."/>
                                </Grid>
                                <TextBlock Grid.Row="1" Text="Invalid file path" Foreground="Red" FontSize="10" Visibility="{Binding CliLocationInvalid, Converter={StaticResource booleanToVisibilityConverter}}"/>
                            </Grid>
                        </controls:LabeledControl.InputContent>
                    </controls:LabeledControl>
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <controls:LabeledControl Label="Unity version:" LabelWidth="100" Grid.Column="0">
                            <controls:LabeledControl.InputContent>
                                <TextBox Grid.Column="0" Margin="0,0,5,0" Text="{Binding UnityVersion}" />
                            </controls:LabeledControl.InputContent>
                        </controls:LabeledControl>
                        
                        <controls:LabeledControl Label="Filter type(s):" LabelWidth="90" Grid.Column="1">
                            <controls:LabeledControl.InputContent>
                                <ComboBox ItemsSource="{Binding FilterTypes}" SelectedItem="{Binding SelectedFilterType}"></ComboBox>
                            </controls:LabeledControl.InputContent>
                        </controls:LabeledControl>
                    </Grid>
                </Grid>    
            </GroupBox>
            
            <GroupBox Header="Jobs" Grid.Row="2" Margin="5">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <CheckBox Content="Copy bundles" IsChecked="{Binding CopyBundles}" Grid.Row="0" Margin="5"/>
                        <CheckBox Content="Extract asset" IsChecked="{Binding ExtractAsset}" Grid.Row="1" Margin="5"/>
                        <CheckBox Content="Delete redundant" IsChecked="{Binding DeleteRedundant}" Grid.Row="2" Margin="5"/>
                        <CheckBox Content="Rename spine" IsChecked="{Binding RenameSpine}" Grid.Row="3" Margin="5"/>
                        <CheckBox Content="Sort asset" IsChecked="{Binding SortAsset}" Grid.Row="4" Margin="5"/>
                    </Grid>
                    
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <CheckBox Content="Sort spine" IsChecked="{Binding SortSpine}" Grid.Row="0" Margin="5"/>
                        <CheckBox Content="Organize spine" IsChecked="{Binding OrganizeSpine}" Grid.Row="1" Margin="5"/>
                        <CheckBox Content="Resize spine textures" IsChecked="{Binding ResizeSpineTextures}" Grid.Row="2" Margin="5"/>
                        <CheckBox Content="Sort atlas" IsChecked="{Binding SortAtlas}" Grid.Row="3" Margin="5"/>
                        <CheckBox Content="Normalize costume name" IsChecked="{Binding NormalizeCostumeName}" Grid.Row="4" Margin="5"/>
                    </Grid>
                </Grid>
            </GroupBox>
            
            <Button Content="Start" Grid.Row="3" Margin="5" HorizontalAlignment="Right" Width="100" Command="{Binding StartCommand}"/>
        </Grid>
    </ScrollViewer>
</UserControl>