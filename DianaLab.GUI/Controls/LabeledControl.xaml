<UserControl x:Class="DianaLab.GUI.Controls.LabeledControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DianaLab.GUI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{Binding LabelWidth, RelativeSource={RelativeSource AncestorType=UserControl}, FallbackValue=Auto}"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Label -->
        <TextBlock Grid.Column="0"
                   Text="{Binding Label, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   VerticalAlignment="Center"
                   Margin="0,0,10,0"
                   FontSize="{Binding LabelFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   FontFamily="{Binding LabelFontFamily, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   FontWeight="{Binding LabelFontWeight, RelativeSource={RelativeSource AncestorType=UserControl}}"/>

        <!-- Content -->
        <ContentPresenter Grid.Column="1"
                          Content="{Binding InputContent, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          VerticalAlignment="Center"/>
    </Grid>
</UserControl>
