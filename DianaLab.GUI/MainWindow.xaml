<Window x:Class="DianaLab.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DianaLab.GUI"
        mc:Ignorable="d"
        Title="DianaLab" Height="600" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2E3338">
            <StackPanel>
                <Label Content="DianaLab" Foreground="White" FontSize="20" HorizontalAlignment="Center" Margin="0,10,0,20"/>
                <Button Content="Extract" Click="ExtractButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Live2D Assets" Click="Live2DAssetsButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Settings" Click="SettingsButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="About" Click="AboutButton_Click" Style="{StaticResource SidebarButtonStyle}"/>
            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" x:Name="MainContent" Margin="10"/>
    </Grid>
</Window>
