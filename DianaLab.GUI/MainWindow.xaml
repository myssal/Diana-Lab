<Window x:Class="DianaLab.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DianaLab.GUI"
        mc:Ignorable="d"
        Title="Diana's Lab" Height="670" Width="1100">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2E3338">
            <StackPanel>
                <Label Content="Diana's Lab" FontWeight="Bold" Foreground="White" FontSize="20" 
                HorizontalAlignment="Center" 
                Margin="0,10,0,20"/>
                <Button Content="Extract" Command="{Binding ExtractViewCommand}" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Live2D Assets" Command="{Binding Live2DAssetsViewCommand}" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="Settings" Command="{Binding SettingsViewCommand}" Style="{StaticResource SidebarButtonStyle}"/>
                <Button Content="About" Command="{Binding AboutViewCommand}" Style="{StaticResource SidebarButtonStyle}"/>
            </StackPanel>
        </Border>

        <ContentControl Grid.Column="1" Content="{Binding CurrentView}" Margin="10"/>
    </Grid>
</Window>
